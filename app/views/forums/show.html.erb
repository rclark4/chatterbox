<p id="notice"><%= notice %></p>
<h2><%= @forum.title %></h2>
<i><%= @forum.description %></i>
<p>
<%= link_to 'New Topic', new_topic_path %> | <%= link_to 'Edit Forum', edit_forum_path(@forum) %>
</p>

<table>
  <tr>
    <th>Topics</th>
    <th>Author</th>
    <th>Replies</th>
    <th>Votes</th>
  </tr>

<% @forum.topics.each do |topic| %>
  <tr>
    <td><b><%= link_to topic.title, topic %></b><br />
    <i><%= truncate(topic.content, :length => 75) %></i></td>
    <td>by [username]<br />
    <small><%= time_ago_in_words topic.created_at %> ago </small></td>
    <td><%= pluralize(topic.posts.count, "reply") %><br />
    <% if topic.posts.count > 0  %>
    <small><%= time_ago_in_words topic.posts.last.created_at %> ago</small>
    <% else %>No posts<% end %></td>
    <td># votes<%#= pluralize(topic.votes.count, "votes") %></td>
  </tr>
<% end %>
</table>